{
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "ES2020",
		"lib": ["ES2020"],
		"types": ["node"],
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src"]
}
